<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <EditText
            android:id="@+id/etLayerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/layer_id_hint"
            android:inputType="number" />

        <EditText
            android:id="@+id/etMinZoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/min_zoom_hint"
            android:inputType="number"
            android:text="8" />

        <EditText
            android:id="@+id/etMaxZoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/max_zoom_hint"
            android:inputType="number"
            android:text="14" />

        <EditText
            android:id="@+id/etBbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/bbox_hint"
            android:inputType="text" />

        <Button
            android:id="@+id/btnDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/download" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="?attr/textAppearanceBody2" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
